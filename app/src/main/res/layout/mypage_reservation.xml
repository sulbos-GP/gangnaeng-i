<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edge"
        android:padding="15dp"
        android:text="본인이 예약한 글"
        android:gravity="center"
        android:textSize="20dp" />
        <LinearLayout
            android:padding="10dp"
            android:id="@+id/reservationListView"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="- 속기 서비스 예약."/>

                    <ListView
                        android:padding="5dp"
                        android:layout_weight="1"
                        android:id="@+id/writenServiceList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                       ></ListView>
            <TextView
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="- 대필 서비스 예약."/>
                    <ListView
                        android:padding="5dp"
                        android:layout_weight="1"
                        android:id="@+id/writingServiceList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    ></ListView>

            <TextView
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="- 보행자 서비스 예약."/>

                <ListView
                    android:padding="5dp"
                    android:id="@+id/togetherServiceList"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    ></ListView>
            <TextView
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="- 달구지 예약."/>

                    <ListView
                        android:padding="5dp"
                        android:id="@+id/dalgujiServiceList"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></ListView>

        </LinearLayout>/>
</LinearLayout>