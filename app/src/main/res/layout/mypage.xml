<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/myPic"
            android:layout_width="79dp"
            android:layout_height="91dp"
            android:layout_margin="30dp"
            android:onClick="onClick"
            android:src="@drawable/person" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/nickName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="닉네임 : "/>

            <TextView
                android:id="@+id/major"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:visibility="gone"
                android:text="학과 : "/>

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:visibility="gone"
                android:text="이메일 : "/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/edge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_margin="30dp">
        <TextView
            android:id="@+id/mileages"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="마일리지 0p"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/mileageSum"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="총 적립 마일리지 0p"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/mileageUse"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="사용 0p"
            android:textSize="15dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:padding="10dp"
        android:background="@drawable/edge"
        android:text="활동내역"
        android:textSize="30dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edge"
        android:orientation="vertical"
        android:padding="10dp">
        <TextView
            android:id="@+id/myWrite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="작성한 글"
            android:onClick="onClick"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/myComent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="댓글을 남긴 글"
            android:onClick="onClick"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/myReservation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="예약 현황"
            android:onClick="onClick"
            android:visibility="gone"
            android:textSize="20dp"/>
    </LinearLayout>
    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edge"
        android:layout_margin="10dp"
        android:layout_gravity="right"
        android:onClick="onClick"
        android:text="로그아웃"/>
</LinearLayout>